---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero-section">
				<div class="container">
					<h1 class="display-4">
						Discover Your Next Favorite Product
					</h1>
					<p class="lead">
						Browse our collection and find the perfect items for
						you. Quality products at unbeatable prices.
					</p>
					<img
						src="/blog-placeholder-about.jpg"
						alt="Shop Image"
						class="img-fluid mb-4"
					/>
					<a href="/products/catalog" class="btn cta-btn">Shop Now</a>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.hero-section {
		background: #f8f9fa;
		padding: 50px 0;
		text-align: center;
	}
	.hero-section img {
		max-width: 100%;
		height: auto;
	}
	.cta-btn {
		background-color: #007bff;
		color: white;
		border: none;
		padding: 15px 30px;
		font-size: 1.25rem;
		text-transform: uppercase;
	}
	.cta-btn:hover {
		background-color: #0056b3;
	}
</style>
